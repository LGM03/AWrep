<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <link rel="stylesheet" href="/css/estilosMainView.css">
  <link rel="stylesheet" href="/css/estilosUsuarios.css">
  <link rel="stylesheet" href=<%=gama%>>
  <link rel="shortcut icon" id = "logoPequeño" href=<%=logo%>>
  <title><%=titulo%></title>
</head>

<body class="fondo">
  <%- include('cabecera.ejs') %>
    <section class="container justify-content-center mt-3">

      <!-- Usuarios con validacion pendiente -->
      <div id = "divUsuariosValidar"class="row mb-3 w-100">
        <h3 class  = "textoCabecera text-center">Usuarios Pendientes de Validar</h3>

        <!--Por cada destino traido por la base de datos pongo una tarjeta -->
        <%usuarios.forEach(function(usuario){ %>
          <%if(usuario.rol == -1){ %>
            <div class="row cajaUsuario rounded m-2">
              <div class="col-2 d-flex justify-content-between align-items-center ">
                <img src="<%=usuario.imagen%>" alt="Foto del usuario" class="img-fluid logoUsuario">
              </div>

              <div class="col-7 d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <h5 class="mb-0"><%= usuario.nombre%> <%=usuario.apellido1%> <%= usuario.apellido2%> </h5>
                </div>
                <p><%= usuario.correo%></p>
              </div>
              <div class="col-3 mt-2">
                <button class="btn btn-success mb-2 w-100 validarUsuario"> Validar </button>
                <button class="btn btn-danger mb-2 w-100 eliminarUsuario"> Eliminar </button>
              </div>
            </div>
            <%}%>
          <% }); %>
              <div class="col-12 text-center d-none" id = "NoValidar">
                  <h5 class="mt-3 alert alert-warning">No hay usuarios pendientes de validar</h2>  <!--Pongo el mensaje de error traido al hacer el render-->
              </div>
      
      </div>

   <!--Usuarios activos para gestionar-->
      
   <div id = "divUsuarios"class="row mb-3 w-100">
    <h3 class  = "textoCabecera text-center">Usuarios Disponibles</h3>

    <!--Formulario para ver usuarios-->


    <form id="filtrarUsuario" class ="bg-light rounded mb-3">
      <div class="mt-3 mb-3 row">
        <label for="correo" class="col-sm-3 col-form-label">Correo:</label>
        <div class="col-sm-9">
          <input type="email" class="form-control" id="correoFiltrar" name="correo">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="nombre" class="col-sm-3 col-form-label">Nombre:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="nombreFiltrar" name="nombre">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="apellido" class="col-sm-3 col-form-label">1ºApellido:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="apellido1Filtrar" name="apellido1">
        </div>
      </div>

      <div class="mb-3 row">
        <label for="apellido" class="col-sm-3 col-form-labelFiltrar">2ºApellido:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="apellido2Filtrar" name="apellido2">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="facultad" class="col-sm-3 col-form-label">Facultad:</label>
        <div class="col-sm-9">
          <select class="form-control" id="facultadFiltrar" name="facultad">
            <option value="" >Seleccione su facultad:</option>
            <option value="Mates">Mates</option>
            <option value="Fisica">Fisica</option>
            <option value="Informatica">Informatica</option>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="curso" class="col-sm-3 col-form-label">Curso:</label>
        <div class="col-sm-9">
          <select class="form-control" id="cursoFiltrar" name="curso">
            <option value="">Seleccione su Curso:</option>
            <option value="1º">1º</option>
            <option value="2º">2º</option>
            <option value="3º">3º</option>
            <option value="4º">4º</option>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="grupo" class="col-sm-3 col-form-label">Grupo:</label>
        <div class="col-sm-9">
          <select class="form-control" id="grupoFiltrar" name="grupo">
            <option value="">Seleccione su Grupo:</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
          </select>
        </div>
      </div>

      <div class="mb-3 row">
        <div class="offset-sm-3 col-sm-9">
          <button type="submit" class="btn botonsabermas" id="idFiltrar">Filtrar</button>
        </div>
      </div>
    </form>

    <!--Por cada destino traido por la base de datos pongo una tarjeta -->
    <div class="row" id = "usuariosMostrados">
    <%usuarios.forEach(function(user){ %>
      <%if(user.rol !== -1 && user.correo !== sesion.correo){ %>
        <div class="row cajaUsuario rounded m-2">
          <div class="col-2 d-flex justify-content-between align-items-center ">
            <img src="<%=user.imagen%>" alt="Foto del usuario" class="img-fluid logoUsuario">
          </div>

          <div class="col-7 d-flex flex-column">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <h5 class="mb-0"><%= user.nombre%> <%=user.apellido1%> <%= user.apellido2%> </h5>
            </div>
            <p id = "correoUser"><%= user.correo%></p>
          </div>
          <div class="col-3 mt-2">
            <button class="btn btn-dark mb-2 w-100 verReservas"> Ver Reservas </button>
            <%if(user.rol !== 1){ %>
            <button class="btn btn-secondary mb-2 w-100 darPermisos"> Dar Permisos </button>
            <%}else{ %>
              <button class="alert alert-success p-1 w-100"> Es Admin </button>
              <%}%>
          </div>
        </div>
        <%}%>
      <% }); %>
    </div>
      <%if(usuarios.length === 0){ %>
   
          <div class="col-12 text-center">
              <h5 class="mt-3 alert alert-warning">No hay usuarios disponibles</h5>  <!--Pongo el mensaje de error traido al hacer el render-->
          </div>
      <% }; %>
  </div>




    </section>
    <%- include('footer.ejs') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>


      <script src="/js/validarFormulario.js"></script>
      <script src = "/js/gestionUsuario.js"></script>

</body>

</html>