<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <link rel="stylesheet" href="/css/estilosMainView.css">
  <link rel="stylesheet" href="/css/estilosUsuarios.css">
  <link rel="stylesheet" href=<%=gama%>>
  <link rel="shortcut icon" id = "logoPequeño" href=<%=logo%>>
  <title><%=titulo%></title>
</head>

<body class="fondo">
  <%- include('cabecera.ejs') %>
    <section class="container justify-content-center mt-3">

      <!-- Usuarios con validacion pendiente -->
      <div id = "divUsuariosValidar"class="row mb-3 w-100">
        <h3 class  = "textoCabecera text-center">Usuarios Pendientes de Validar</h3>

        <!--Por cada destino traido por la base de datos pongo una tarjeta -->
        <%usuarios.forEach(function(usuario){ %>
          <%if(usuario.rol == -1){ %>
            <div class="row cajaUsuario rounded m-2">
              <div class="col-2 d-flex justify-content-between align-items-center ">
                <img src="<%=usuario.imagen%>" alt="Foto del usuario" class="img-fluid">
              </div>

              <div class="col-7 d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <h5 class="mb-0"><%= usuario.nombre%> <%=usuario.apellido1%> <%= usuario.apellido2%> </h5>
                </div>
                <p><%= usuario.correo%></p>
              </div>
              <div class="col-3 mt-2">
                <button class="btn btn-success mb-2 w-100 validarUsuario"> Validar </button>
                <button class="btn btn-danger mb-2 w-100 eliminarUsuario"> Eliminar </button>
              </div>
            </div>
            <%}%>
          <% }); %>

          <%if(usuarios.length === 0){ %>
       
              <div class="col-12 text-center">
                  <h5 class="mt-3 alert alert-warning">No hay usuarios pendientes de validar</h2>  <!--Pongo el mensaje de error traido al hacer el render-->
              </div>
          <% }; %>
      </div>

   <!--Usuarios activos para gestionar-->
      
   <div id = "divUsuarios"class="row mb-3 w-100">
    <h3 class  = "textoCabecera text-center">Usuarios Pendientes de Validar</h3>

    <!--Por cada destino traido por la base de datos pongo una tarjeta -->
    <%usuarios.forEach(function(usuario){ %>
      <%if(usuario.rol == 0){ %>
        <div class="row cajaUsuario rounded m-2">
          <div class="col-2 d-flex justify-content-between align-items-center ">
            <img src="<%=usuario.imagen%>" alt="Foto del usuario" class="img-fluid">
          </div>

          <div class="col-7 d-flex flex-column">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <h5 class="mb-0"><%= usuario.nombre%> <%=usuario.apellido1%> <%= usuario.apellido2%> </h5>
            </div>
            <p><%= usuario.correo%></p>
          </div>
          <div class="col-3 mt-2">
            <button class="btn btn-success mb-2 w-100 verReservas"> Ver Reservas </button>

          </div>
        </div>
        <%}%>
      <% }); %>

      <%if(usuarios.length === 0){ %>
   
          <div class="col-12 text-center">
              <h5 class="mt-3 alert alert-warning">No hay usuarios disponibles</h2>  <!--Pongo el mensaje de error traido al hacer el render-->
          </div>
      <% }; %>
  </div>




    </section>
    <%- include('footer.ejs') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>


      <script src="/js/validarFormulario.js"></script>
      <script src = "/js/gestionUsuario.js"></script>

</body>

</html>