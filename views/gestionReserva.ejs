<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <link rel="stylesheet" href="/css/estilosMainView.css">
  <link rel="stylesheet" href="/css/estilosUsuarios.css">
  <link rel="stylesheet" href=<%=gama%>>
  <link rel="shortcut icon" id="logoPequeño" href=<%=logo%>>
  <title>
    <%=titulo%>
  </title>
</head>

<body class="fondo">
  <%- include('cabecera.ejs') %>
    <section class="container justify-content-center mt-3">

      <!-- Usuarios con validacion pendiente -->
      <div id="divUsuariosValidar" class="row mb-3 w-100">
        <%if(sesion.rol==-1){ %>
          <h5 class="mt-3 alert alert-warning">Tu usuario no ha sido validado</h5>
          <%}else{ %>
            <h3 class="textoCabecera text-center">Listado de Reservas</h3>

            <form class="bg-light rounded mb-3">

              <div class="mt-3 mb-3 row">
                <label for="correo" class="col-sm-2 col-form-label text-center">Correo:</label>
                <div class="col-sm-10">
                  <input type="email" class="form-control" id="correoFiltrar" name="correo">
                </div>
              </div>
              <div class="mb-3 row">
                <label for="nombre" class="col-sm-2 col-form-label text-center">Nombre:</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="nombreFiltrar" name="nombre">
                </div>
              </div>
              <div class="mb-3 row">
                <label for="apellido" class="col-sm-2 col-form-label text-center">1ºApellido:</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="apellido1Filtrar" name="apellido1">
                </div>
              </div>

              <div class="mb-3 row">
                <label for="apellido" class="col-sm-2 col-form-label text-center">2ºApellido:</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="apellido2Filtrar" name="apellido2">
                </div>
              </div>
              <div class="mb-3 row">
                <label for="facultad" class="col-sm-2 col-form-label text-center">Facultad:</label>
                <div class="col-sm-10">
                  <select class="form-control" id="facultadFiltrar" name="facultad">
                    <option value="">Seleccione su facultad:</option>
                    <option value="Mates">Mates</option>
                    <option value="Fisica">Fisica</option>
                    <option value="Informatica">Informatica</option>
                  </select>
                </div>
              </div>

              <div class="mt-3 mb-3 row">
                <label for="instalacionFiltro" class="col-sm-2 col-form-label text-center">Nombre Instalación:</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="instalacionFiltro" name="instalacionFiltro"
                    placeholder="Ingrese el nombre de la instalación" required>
                </div>
              </div>

              <div class="mb-3 row">
                <label class="col-sm-2 col-form-label text-center" for="fechaIniFiltro">Fecha Inicio:</label>
                <div class="col-sm-10">
                  <input type="date" id="fechaIniFiltro" name="fechaIniFiltro" class="form-control" required>
                </div>
              </div>


              <div class="mb-3 row" id="verPeriodo">
                <div class="col-sm-2 text-end">
                  <input type="checkbox" class="form-check-input" id="periodoCheckbox">
                </div>
                <label class="col-10 col-form-label text-start" for="periodoCheckbox">Seleccionar periodo</label>
              </div>

              <div class="mb-3 row d-none" id="filtroFin">
                <label class="col-sm-2 col-form-label text-center" for="fechaFinFiltro">Fecha Fin:</label>
                <div class="col-sm-10">
                  <input type="date" id="fechaFinFiltro" name="fechaFinFiltro" class="form-control" required>
                </div>
              </div>

              <button type="submit" class="btn botonsabermas offset-sm-2 mb-3" id="filtrarReservas">Filtrar</button>
            </form>
            <div class="row" id = "divListaReservas"></div>
            <!--Por cada destino traido por la base de datos pongo una tarjeta -->

      </div>

      <!--Usuarios activos para gestionar-->

      <%if(sesion.rol==1){ %>
        <div id="divUsuarios" class="row mb-3 w-100">
          <h3 class="textoCabecera text-center">Lista de Espera</h3>
        </div>
        <%}%>


          <%}%>
            <!--Formulario para ver usuarios-->




    </section>
    <%- include('footer.ejs') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>


      <script src="/js/validarFormulario.js"></script>
      <script src="/js/gestionReserva.js"></script>
      <script src="/js/gestionUsuario.js"></script>

</body>

</html>