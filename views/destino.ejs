                              <label for="apellidos" class="col-md-2 col-form-label text-center">Apellidos:</label>
                              <div class="col-md-4">
                                <input type="text" class="form-control" id="apellido" name="apellido" required>
                              </div>
                            </div>

                            <div class="mb-3 row">
                              <label for="clave" class="col-sm-3 col-form-label text-center">Correo Electrónico:</label>
                              <div class="col-sm-9">
                                <input type="email" class="form-control" id="correo" name="correo"
                                  placeholder="correo@ejemplo.com" required>
                              </div>
                            </div>

                            <div class="mb-3 row">
                              <label class="control-label col-sm-3 text-center" for="fecha">Fecha:</label>
                              <div class="col-sm-9">
                                <input type="date" id="fecha" name="fecha" class="form-control" required>
                              </div>
                            </div>

                            <div class="mb-3 row">
                              <div class="offset-sm-3 col-sm-9">
                                <button type="submit" class="btn botonbuscar">Confirmar</button>
                                <button type="button" class="btn botonbuscar" data-bs-dismiss="modal">Cancelar</button>
                              </div>
                            </div>

                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-4 mb-2 text-center p-3 col-sm-12 zonaComentarios">

              <button id = "botonComentarios" class = "btn text-center" onclick="mostrarComentarios()">Ver Comentarios</button>

              <div id="comentarios" class="rounded">
                 
                  
                  <!--Cada caja de comentario-->
                  <h4 class ="cabeceraComentarios mt-1 ">Comentarios</h4>
