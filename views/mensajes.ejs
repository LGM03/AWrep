<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" id="hojaEstilosGama" href=<%=gama%>>
    <link rel="stylesheet" href="/css/estilosMainView.css">
    <link rel="stylesheet" href="/css/estiloItinerario.css">

    <link rel="shortcut icon" id="logoPequeño" href=<%=logo%>>
    <title>
        <%=titulo%>
    </title>
</head>

<body class="fondo">

    <%- include('cabecera.ejs') %>

    <div class="col-md-2  text-center bordecolumnaCabecera text-sm"><a href=# class="btn btn-lg botoncabecera"
        data-bs-toggle="modal" data-bs-target="#MandarMensaje">
        <h5>MandarMensaje</h5>
      </a></div>

      <div class="modal fade" id="MandarMensaje" data-bs-backdrop="static">
        <!-- data-bs impide que se cierre al pulsar fuera del modal -->
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
      
            <!-- cabecera del diálogo -->
            <div class="modal-header">
              <h4 class="modal-title">Mandar Mensaje</h4>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
      
            <!-- cuerpo del diálogo -->
            <div class="modal-body alert alert-secondary">
      
              <form id="MandarMensaje">
                <div class="mb-3 row">
                    <label for="correo" class="col-sm-3 col-form-label" id="correoReceptor">Correo Receptor:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="nombre" id="correoReceptor" required>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="cuerpoMensaje" class="col-sm-3 col-form-label" id="cuerpoMensaje">Text:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="nombre" id="cuerpoMensaje" required>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="offset-sm-3 col-sm-9">
                        <button type="submit" class="btn botonsabermas" id="idCrearinstalacion">Confirmar</button>
                        <button type="button" class="btn botonsabermas" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </form>
            </div>
          </div>
      
        </div>
      </div>

    <div class="container row pt-3 pb-2 mb-4 rounded d-flex justify-content-around">
        <div class="col-5 d-flex justify-content-center align-items-center bg-white ">
            <h2 class="cabeceraInfo mt-1"><strong>Mensajes Recibidos</strong></h2>
            <section class="container justify-content-center mt-3">
                <!-- Contenedor encargado de almacenar los mensajes recibidos -->
                <% if (error !=null) { %>
                  <div class="container alert alert-danger text-center">
            
                    <%= error %>
                  </div>
                  <% } %>
                    <% if (exito !=null) { %>
                      <div class="container alert alert-success text-center">
                        <%= exito %>
                      </div>
                      <% } %>
                        <div class="row" id = "zonaMensajesRecibidos">
            
                          <!--Por cada mensaje traido por la base de datos pongo una tarjeta -->
                          <%mensajes.forEachSend(function(mensaje){ %>
            
                            <div class="col-md-5 pb-4 d-flex">
                              <div class="card w-100">
                                <div class="card-header CabeceraCarta">
                                  <h5>
                                    <%=mensaje.correoEmisor%>
                                  </h5> <!--Pongo el nombre del destino en cuestion-->
                                </div>
                              <div class="card-body text-center">
                                <h6>
                                    <%=mensaje.cuerpoMensaje%>
                                  </h6>
                              </div>
                              </div>
                            </div>
            
                            <% }); %>
            
            
            
                        </div>
              </section>
        </div>

        <div class="col-5 d-flex justify-content-center align-items-center bg-white ">
            <h2 class="cabeceraInfo mt-1"><strong>Mensajes Enviados</strong></h2>
            <section class="container justify-content-center mt-3">
                <!-- Contenedor encargado de almacenar los mensajes recibidos -->
                <% if (error !=null) { %>
                  <div class="container alert alert-danger text-center">
            
                    <%= error %>
                  </div>
                  <% } %>
                    <% if (exito !=null) { %>
                      <div class="container alert alert-success text-center">
                        <%= exito %>
                      </div>
                      <% } %>
                        <div class="row" id = "zonaMensajesEnviados">
            
                          <!--Por cada mensaje traido por la base de datos pongo una tarjeta -->
                          <%mensajes.forEachRecive(function(mensaje){ %>
            
                            <div class="col-md-5 pb-4 d-flex">
                              <div class="card w-100">
                                <div class="card-header CabeceraCarta">
                                  <h5>
                                    <%=mensaje.correoReceptor%>
                                  </h5> <!--Pongo el nombre del destino en cuestion-->
                                </div>
                              <div class="card-body text-center">
                                <h6>
                                    <%=mensaje.cuerpoMensaje%>
                                  </h6>
                              </div>
                              </div>
                            </div>
            
                            <% }); %>
            
            
            
                        </div>
              </section>
            
        </div>
    
    </div>

        <%- include('footer.ejs') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
                crossorigin="anonymous"></script>

            <script src="/js/validarFormulario.js"></script>
            <script src="/js/reserva.js"></script>
            <script src="/js/mensajes.js"></script>

</body>

</html>